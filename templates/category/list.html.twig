{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}

<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Liste des produits de la catégorie {{ category.name }}</h1>
        </div>
        {% for prod in product %}
        <div class="col-3 mb-3">
            <article class="card h-100">
                <div class="card-body">
                    <h2 class="card-title">{{ prod.name }}</h2>
                    <p class="card-text">{{ prod.description }}</p>
                    <a href="#" class="btn btn-primary">Voir les détails</a>
                </div>
            </article>
        </div>
        {% endfor %}
    </section>
</main>

{% endblock %}